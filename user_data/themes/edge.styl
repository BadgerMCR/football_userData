// NAME="Edge"
// DESCRIPTION="This crisp theme features a diagonal edge with the primary color across the widget."

$where_is_the_line = 70%
$line_angle = 60deg

body, html{
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 500;
	color: $text_a;
}

h2 {
  font-family: 'Nunito Sans';
  font-style: normal;
  font-weight: 800;
  color: $text_a;
}

.widget {
  background: linear-gradient($line_angle, $primary_color $where_is_the_line, darken($secondary_color, 10%) $where_is_the_line + .3%);

  box-shadow: 1px 1px 1px rgba(0,0,0,0.12),
              2px 2px 2px rgba(0,0,0,0.24),
              inset 0 0 10vh rgba(0,0,0,0.20),
              inset 0 0 5vh rgba(0,0,0,0.20);
}