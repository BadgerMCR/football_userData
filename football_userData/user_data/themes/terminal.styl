// NAME="Terminal"
// DESCRIPTION="This is what you get if you average out the computer screens from all hacker movies. Note: works really well with green text. Uses both backgrounds to create a gradient."

body {
  color: lighten($text_a, 80%);
  // This gives the text subtle blur / glow
  text-shadow:  0 0 2px alpha(lighten($text_a, 100%), 60%),
                0 0 3px alpha(lighten($text_a, 60%), 50%),
                0 0 4px alpha(lighten($text_a, 40%), 40%),
                0 0 5px alpha(lighten($text_a, 10%), 30%),
                0 0 8px alpha(darken($text_a, 10%), 20%),
                0 0 14px alpha(darken($text_a, 30%), 10%);
	font-family: 'Karla';
	font-style: normal;
	font-weight: 400;
}

h2 {
  font-family: 'Ubuntu';
	font-style: normal;
	font-weight: 700;

}

.widget {
  background: $background_a;
  background-image: radial-gradient(
    $background_b, $background_a 120%
  );
  
  // This gives our terminal window rounded corners
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
  
  // Widget top bar
  // The :before creates an extra element
  &:before{
    position: absolute;
    top: -20px !important;
    left: 0;
    content: "";
    width: 100%;
    height: 20px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    background: linear-gradient(to bottom,  #f7f7f7 0%,#B8B8B8 100%); 
  }

  i {
		margin-right: 1vw;
	}
  
  // Monitor lines added on top
  &:after {
	  content: "";
	  position: absolute;
	  top: 0;
	  left: 0;
	  width: 100%;
	  height: 100%;
	  z-index: 1000;
	  background: repeating-linear-gradient(
	    0deg,
	    rgba(black, 0.15),
	    rgba(black, 0.15) 1px,
	    transparent 1px,
	    transparent 2px
	  );
	}
}